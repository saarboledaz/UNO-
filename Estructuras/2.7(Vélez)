import java.util.*;

public class Main {

    public static void main(String[] argv) {
        Scanner e = new Scanner(System.in);
        int n = e.nextInt();
        short k = e.nextShort();
        short t = 0;
        LinkedList<Short> A = new LinkedList<Short>();
        LinkedList<Short> B = new LinkedList<Short>();
        for (int i = 0; i < n; i++) {
            A.add(e.nextShort());
        }
        int s = 2;
        int i = (s - 2) % n;
        int y = n;
        for (int j = n; j > 0; j--) {
            i = (i + k) % (n--);
            B.add(A.remove(i--));
        }
        for (int x = 0; x < (y - 1); x++) {
            t += Math.abs(B.getLast() - B.get(x));
        }
        System.out.println(t);
    }
}
